#popoutBox
  position absolute
  background-color: #e5e5e5
  border: 1px solid #999999
  box-shadow: 3px 4px 8px 0px #aaa
  border-radius: 5px
  overflow hidden
  z-index: 999
  #header
    height 30px
    // background-color: #19a0ff
    line-height: 30px
    padding:0 8px
    box-shadow: 0px 2px 2px 0 #aaa;
    user-select none
    #title
      font-color #fff
    #fold
        float: right
        margin-right 5px
        cursor: pointer
    #close
      float: right
      cursor: pointer
      i
       line-height: 30px
    #close:hover
      text-decoration: underline
  #body
    background-color: #fff
    min-width 120px
  .unfold
    margin 5px
    min-height: 50px
  .fold
    height 0
    overflow hidden
    margin 0px 5px

